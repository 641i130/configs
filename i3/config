bar {
    output DisplayPort-1
    position bottom
    colors {
	inactive_workspace #000000 #000000 #888888
        active_workspace  #333333 #222222 #888888
        focused_workspace   #000000 #000000 #FFFFFF
    }
       status_command i3blocks
}

